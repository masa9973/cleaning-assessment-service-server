{
    "version": "2018-05-29",
    "operation": "Query",
    "query": {
        "expression": "#PK = :PK and begins_with(#SK, :SK)",
        "expressionNames": {
            "#PK": "PK",
            "#SK": "SK",
        },
        "expressionValues": {
            ":PK": $util.dynamodb.toDynamoDBJson("Record#${ctx.args.recordHotelID}"),
            ":SK": $util.dynamodb.toDynamoDBJson("${ctx.args.recordDate}")
        }
    },
  
}